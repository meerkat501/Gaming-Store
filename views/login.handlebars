 <div class="container d-flex justify-content-center p-5 text-center">
        <div class="row form-box register signup-form">
            <div class="form row">
                <!-- Sign up -->
                <div class="col-md-5 justify-content-center">
                    <h2>Registration</h2>

                    <form action="#">
                        <div class="input-box">
                            <span class="icon"><ion-icon name="person"></ion-icon></span>
                            <input class="form-input" type="text" id="name-signup" required>
                            <label>Username</label>
                        </div>
                        <div class="input-box">
                            <span class="icon"><ion-icon name="mail"></ion-icon></span>
                            <input class="form-input" type="text" id="email-signup" required>
                            <label>Email</label>
                        </div>
                        <div class="input-box">
                            <span class="icon"><ion-icon name="lock-closed"></ion-icon></span>
                            <input class="form-input" type="password" id="password-signup" required>
                            <label>Password</label>
                        </div>
                        <div class="remember-forgot">
                            <label><input type="checkbox"> I
                                agree to the terms & conditions</label>
                        </div>
                        <button class="btn btn-primary btn-danger" type="submit">Register</button>

                    </form>

                    
                    
                </div>
                <!-- Login -->
                <div class="col-md-2">
                    <span id="vertical-line">
                        OR
                         
                     </span>
                </div>
                
                <div class="col-md-5">
                    <h2>Login</h2>


                    <form class="login-form" action="#">
                        <div class="input-box">
                            <input class="form-input" type="text" id="email-login" required>
                            <label>Email</label>
                        </div>
                        <div class="input-box">
                            <input class="form-input" type="password" id="password-login" required>
                            <label>Password</label>
                        </div>
                        <button class="btn btn-primary btn-danger" type="submit">Login</button>

                    </form>
                </div>


            </div>

        </div>
    </div>

    <script src="./js/login.js"></script>